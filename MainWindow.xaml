<Window x:Class="GapOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GapOverlay"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">

    <Grid x:Name="RootGrid" ClipToBounds="True">
        <!-- Fullscreen black overlay -->
        <Rectangle x:Name="Mask" Fill="Black" IsHitTestVisible="False">
            <Rectangle.OpacityMask>
                <LinearGradientBrush x:Name="DoorMask" StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Black" Offset="0.0"/>  <!-- Left edge fully black -->
                    <GradientStop Color="Black" Offset="0.48"/> <!-- Start of left fade -->
                    <GradientStop Color="Transparent" Offset="0.49"/>  <!-- Left edge of transparent gap -->
                    <GradientStop Color="Transparent" Offset="0.51"/> <!-- Right edge of transparent gap -->
                    <GradientStop Color="Black" Offset="0.52"/> <!-- End of right fade -->
                    <GradientStop Color="Black" Offset="1.0"/> <!-- Right edge fully black -->
                </LinearGradientBrush>
            </Rectangle.OpacityMask>
        </Rectangle>

                <!-- Debug helper TextBox -->
        <TextBox x:Name="DebugTextBox"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Width="400"
                 Height="100"
                 Margin="10"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="12"
                 Background="Black"
                 Foreground="Lime"/>
    </Grid>
</Window>
