<Window x:Class="GapOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GapOverlay"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">

    <Grid x:Name="RootGrid" ClipToBounds="True">
        <!-- Fullscreen black overlay -->
        <Rectangle x:Name="Mask" Fill="Black" IsHitTestVisible="False">
            <Rectangle.OpacityMask>
                <LinearGradientBrush x:Name="DoorMask" StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Black" Offset="0.0"/>
                    <GradientStop Color="Black" Offset="0.45"/>
                    <GradientStop Color="Transparent" Offset="0.48"/>
                    <GradientStop Color="Transparent" Offset="0.52"/>
                    <GradientStop Color="Black" Offset="0.55"/>
                    <GradientStop Color="Black" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.OpacityMask>
        </Rectangle>


    </Grid>
</Window>
